<!DOCTYPE html>
<html lang="en" class="html">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="style.css">
   <script src="/socket.io/socket.io.js"></script>
   <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
   <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
   <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <title>Zoom clone</title>
    
    
</head>
<body>
     
   
    <div class="main" id="main">
        <div class="main_left" id="check_left">
            <div class="main_video">
                <div id="video-grid">
                    <span class="check" id="myDIV"  >
                        <i class="far fa-hand-paper" style="color:red;"></i>
                    </span>
                </div>
            </div>
            <div class="main_controls">
                <div class="main__controls__block">
                    <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                       <i class="unmute fas fa-microphone-slash"></i>
                       <span>Unmute</span>
                    </div>
                    <div onclick="playStop()" class="main__controls__button main__video_button" >
                       <i class="stop fas fa-video-slash"></i>
                       <span>Play Video</span>
                    </div>
                 </div>
                 <div class="main__controls__block">
                    
                    <div onclick="screenshare()" id="screenshare" class="main__controls__button">
                        <i class="fas fa-desktop"></i>
                        <span>ScreenShare</span>
                     
                     </div>
                    <div onclick="hidechat()" class="main__controls__button">
                       <i class="fas fa-comment-alt"></i>
                       <span >Chat</span>
                    </div>
                    <div class="main__controls__button" onclick="share()">
                        <i class="fas fa-user-plus"></i>
                        <span>Invite</span>
                    </div>
                    <div onclick="raisedHand()" class="main__controls__button raisedHand">
	        			<i class="far fa-hand-paper"></i>
	        			<span>Hand</span>
	        		</div>
                 </div>
                 <div class="main__controls__block">
                    <div class="main__controls__button">
                       <div onclick="disconnectNow()" class="leave_meeting">Leave Meeting</div>
                    </div>  
                 </div>
            </div>
        </div>

        <div class="main_right hide" id="chat-screen">
            <div class="main_header">
                <h3>Chat</h3>
            </div>
            <div class="main_chat_window">
                <ul id="messages" class="message">

                </ul>
            </div>
            <div class="main_message_container">
                <input type="text" id="chat_message" placeholder="Type your messsage here" >
            </div>
            
            </div>
            
        </div>

    </div>
</body>

<script>
    
    const ROOM_ID = "<%=roomId%>";
    //console.log("<%=roomId%>")
</script>
<script src="script.js"></script>
</html>
